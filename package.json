{
    "version": "0.1.44",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "setup": "yarn && husky install",
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests --maxWorkers=4",
        "lint": "yarn eslint src test stories",
        "prepare": "husky install; tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "precommit": "yarn eslint src test stories"
        }
    },
    "prettier": {
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    },
    "name": "@g2x/sparta",
    "author": "Eddie Lopez",
    "publishConfig": {
        "access": "public"
    },
    "module": "dist/sparta.esm.js",
    "size-limit": [
        {
            "path": "dist/sparta.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/sparta.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.15.8",
        "@size-limit/preset-small-lib": "^6.0.3",
        "@storybook/addon-a11y": "^6.4.19",
